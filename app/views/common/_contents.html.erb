<div class="row no-print-border">
  <div class="col-xs-12">
    <div class="content well">
      <%= content_for(:content) %>
    </div>
  </div>
</div>

<% next_content = 2 %>
<% while content_for(:"content_#{next_content}").present? %>
  <div class="row well">
    <%= content_for(:"content_#{next_content}") %>
  </div>

  <% next_content += 1 %>
<% end %>
